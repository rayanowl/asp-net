    void drawFlower(float x, float y, float flowerSize){

    for(int i = 0 ; i< 7; i++)

    strokeWeight(flowerSize);
    stroke(getRandomColor());

    translate(x,y);
    for(int i=0; i< 7;i++){

    rotate(TWO_PI/7);
    line(0, 0,5 *flowerSize,0);

    }

    strokeWeight(0);
    fill(getRandomColor());
    ellipse(0,0,3.5 * flowerSize,3.5 * flowerSize);
    }

    void setup() {
    size(600,600);
    background(#1d1f20);

    }

